# =============================================================================
# Environment Variables Template - Battle Arena
# =============================================================================
# Copy this file to .env.local for local development
# All variables are validated at startup via src/lib/config/env.ts
# =============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Google AI API Keys (for AI-powered scoring & question generation)
GOOGLE_GENERATIVE_AI_API_KEY=your_google_generative_ai_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Battle Feature Flags
BATTLE_AUTO_REVEAL_NEXT=1
BATTLE_USE_AI=1
BATTLE_AUTO_ADVANCE=true

# Optional: Node Environment (auto-detected)
# NODE_ENV=development
